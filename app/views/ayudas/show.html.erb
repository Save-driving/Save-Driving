<%- model_class = Ayuda -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:glosario) %>:</strong></dt>
  <dd><%= @ayuda.glosario %></dd>
  <dt><strong><%= model_class.human_attribute_name(:usos) %>:</strong></dt>
  <dd><%= @ayuda.usos %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contactos) %>:</strong></dt>
  <dd><%= @ayuda.contactos %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              ayudas_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_ayuda_path(@ayuda), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              ayuda_path(@ayuda),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
