<%= simple_form_for @ayuda, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :glosario %>
  <%= f.input :usos %>
  <%= f.input :contactos %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                ayudas_path, :class => 'btn' %>
  </div>
<% end %>
