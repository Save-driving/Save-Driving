<%- model_class = Ayuda -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:glosario) %></th>
      <th><%= model_class.human_attribute_name(:usos) %></th>
      <th><%= model_class.human_attribute_name(:contactos) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @ayudas.each do |ayuda| %>
      <tr>
        <td><%= link_to ayuda.id, ayuda_path(ayuda) %></td>
        <td><%= ayuda.glosario %></td>
        <td><%= ayuda.usos %></td>
        <td><%= ayuda.contactos %></td>
        <td><%=l ayuda.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_ayuda_path(ayuda), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      ayuda_path(ayuda),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_ayuda_path,
            :class => 'btn btn-primary' %>
