<%- model_class = Usuario -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:documento_id) %>:</strong></dt>
  <dd><%= @usuario.documento_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:numero_doc) %>:</strong></dt>
  <dd><%= @usuario.numero_doc %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nombres) %>:</strong></dt>
  <dd><%= @usuario.nombres %></dd>
  <dt><strong><%= model_class.human_attribute_name(:apellidos) %>:</strong></dt>
  <dd><%= @usuario.apellidos %></dd>
  <dt><strong><%= model_class.human_attribute_name(:direccion) %>:</strong></dt>
  <dd><%= @usuario.direccion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ciudad_id) %>:</strong></dt>
  <dd><%= @usuario.ciudad_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:telefonos) %>:</strong></dt>
  <dd><%= @usuario.telefonos %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @usuario.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:rol_id) %>:</strong></dt>
  <dd><%= @usuario.rol_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cargo_id) %>:</strong></dt>
  <dd><%= @usuario.cargo_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              usuarios_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_usuario_path(@usuario), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              usuario_path(@usuario),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
